  "version": "2.0.0",
  "tasks": [
    {
      "label": "verify",
      "type": "shell",
      "command": "mvn -B verify",
      "group": "build"
    },
    {
      "label": "test",
      "type": "shell",
      "command": "mvn -B test",
      "group": "test"
    },
    {
      "label": "Run FirtNesse",
      "type": "shell",
      "command": "java -jar ${workspaceRoot}/src/test/java/fitnesse/fitnesse-standalone.jar -p 8123 -f ${workspaceRoot}/.settings/plugins.properties -d ${workspaceRoot}/src/test/java/fitnesse"
    }
  ]
}
